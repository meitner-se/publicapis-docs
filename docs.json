{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mint Starter Kit",
  "colors": {
    "primary": "#545EB6",
    "light": "#545EB6",
    "dark": "#7881C6"
  },
  "favicon": "./meitner-favicon.ico",
  "fonts": {
    "family": "Manrope"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Directory API",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "directory-api/introduction"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "directory-api/guides"
            ]
          },
          {
            "group": "Reference",
            "icon": "code",
            "openapi": "directory-api/openapi.json"
          }
        ]
      },
      {
        "tab": "SS12000 API",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "ss12000-api/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "./meitner-logo.svg",
    "dark": "./meitner-logo.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Status",
        "href": "https://status.meitner.se"
      },
      {
        "label": "Support",
        "href": "https://support.meitner.se"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/meitner-se",
      "linkedin": "https://linkedin.com/company/meitner-skolplattform"
    }
  }
}
